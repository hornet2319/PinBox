<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="teamvoy.com.pinbox.UserActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <RelativeLayout
        android:layout_below="@+id/user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <TextView
            android:id="@+id/user_username"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/user_bio"
            android:layout_below="@+id/user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/separator1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/user_bio"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/dim_foreground_material_dark"/>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_below="@id/separator1"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pin_number_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_pins"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/pin_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/board_number_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_boards"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/board_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginRight="5dp"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/like_number_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_like"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/like_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginRight="5dp"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/followers_number_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_followers"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/followers_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="15sp" />
        </LinearLayout>
        <View
            android:id="@+id/separator2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/linear2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/dim_foreground_material_dark"/>
     </RelativeLayout>
</RelativeLayout>
</ScrollView>